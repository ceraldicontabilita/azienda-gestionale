# ============================================================================
# CONFIGURAZIONE SISTEMA GESTIONALE AZIENDALE
# ============================================================================
# IMPORTANTE: Copia questo file in .env e inserisci i valori reali
#             cp .env.example .env
# ============================================================================

# ============================================================================
# SUPABASE (Database Cloud)
# ============================================================================
# Dove trovare: https://supabase.com → Project Settings → API

SUPABASE_URL=https://INSERISCI-QUI-PROJECT-URL.supabase.co
SUPABASE_ANON_KEY=INSERISCI-QUI-ANON-PUBLIC-KEY
SUPABASE_SERVICE_KEY=INSERISCI-QUI-SERVICE-ROLE-KEY

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
# Dove trovare: Supabase → Project Settings → Database → Connection String

DATABASE_URL=postgresql://postgres.INSERISCI-PROJECT-REF:INSERISCI-PASSWORD@aws-0-eu-central-1.pooler.supabase.com:5432/postgres

# ============================================================================
# JWT (Autenticazione)
# ============================================================================
# Genera stringa random: openssl rand -hex 32

JWT_SECRET_KEY=GENERA-UNA-STRINGA-RANDOM-SICURA-DI-64-CARATTERI
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# EMAIL BOT (Gmail)
# ============================================================================
# Gmail App Password: https://myaccount.google.com/apppasswords

EMAIL_ADDRESS=ceraldigroupsrl@gmail.com
EMAIL_PASSWORD=INSERISCI-GMAIL-APP-PASSWORD
EMAIL_SERVER=imap.gmail.com
EMAIL_PORT=993

# ============================================================================
# APPLICATION
# ============================================================================

DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# FILE STORAGE
# ============================================================================

UPLOAD_DIR=/home/claude/azienda-cloud/backend/uploads
MAX_FILE_SIZE=10485760

# ============================================================================
# MONITORING (Optional)
# ============================================================================

SENTRY_DSN=
LOG_LEVEL=INFO
